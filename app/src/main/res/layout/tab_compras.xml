<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ListaCompras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="409dp"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtTotalLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:layout_weight="1"
            android:text="Total: R$"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPrecoTotaLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txtTotalLista"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCriarLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="33dp"
            android:text="Criar" />

        <Button
            android:id="@+id/btnOrdenar"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginEnd="-70dp"
            android:layout_toStartOf="@+id/txtTotalLista"
            android:text="OrdN" />

        <Button
            android:id="@+id/btnOrdenarPreco"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-70dp"
            android:layout_toStartOf="@+id/txtTotalLista"
            android:text="OrdP" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>